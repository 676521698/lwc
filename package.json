{
  "name": "raptor",
  "private": true,
  "description": "Raptor",
  "scripts": {
    "prepublish": "yarn run build",
    "clean": "lerna run clean && lerna clean && rm -rf node_modules",
    "lint": "lerna run lint",
    "test": "lerna exec --concurrency 1 -- yarn test",
    "test:integration":
      "yarn run build && lerna run sauce --scope raptor-integration",
    "build": "lerna run build --ignore raptor-integration",
    "build:artifacts": "npm run build && npm run build:compiler",
    "build:compiler": "lerna exec --scope raptor-compiler yarn build:umd",
    "build:engine": "lerna run build --scope raptor-engine",
    "start":
      "yarn build:artifacts && lerna run build --scope raptor-integration && lerna run start --scope raptor-integration",
    "release": "yarn run prepublish && lerna publish --force-publish=*",
    "release:canary":
      "yarn run prepublish && lerna publish --force-publish=* --canary --skip-git --yes"
  },
  "repository": {
    "type": "git",
    "url": "https://git.soma.salesforce.com/raptor/raptor.git"
  },
  "bin": {
    "raptor-compiler": "bin/raptor-compiler-cli.js"
  },
  "babel": { "presets": ["env"] },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-preset-env": "^1.6.0",
    "lerna": "2.4.0",
    "rimraf": "^2.6.1"
  },
  "workspaces": ["packages/*"]
}
